<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Topics</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom CSS styles */
        .topic {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <!-- Navbar directly embedded -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
      <div class="container">
        <a class="navbar-brand" href="/">Message Board</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/topics">Topics</a>
            </li>
          </ul>
          <ul class="navbar-nav">
            <% if (authToken) { %>
              <li class="nav-item">
                <span class="nav-link">Logged in as: <%= authToken %></span>
              </li>
              <li class="nav-item">
                <a class="nav-link btn btn-outline-light btn-sm mx-2" href="/logout">Logout</a>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link btn btn-outline-light btn-sm mx-2" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link btn btn-outline-light btn-sm" href="/register">Register</a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
        <h1 class="mt-3 mb-4">Topics</h1>

        <div id="topics-container">
            <% topics.forEach(topic => { %>
                <div class="topic border p-3 rounded">
                    <h2 class="mb-3"><%= topic.name %></h2>
                    <ul class="list-group mb-3">
                        <% if (topic.messages && topic.messages.length > 0) { %>
                            <% topic.messages.forEach(message => { %>
                                <li class="list-group-item"><%= message %></li>
                            <% }) %>
                        <% } else { %>
                            <li class="list-group-item">No messages yet</li>
                        <% } %>                    
                    </ul>
                    <!-- Updated form to include topic name -->
                    <form action="/topics" method="POST">
                        <input type="hidden" name="topicName" value="<%= topic.name %>"> <!-- Assuming topic.name is the unique identifier for each topic -->
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" name="message" placeholder="Enter your message">
                            <button class="btn btn-primary" type="submit">Post Message</button>
                        </div>
                    </form>
                </div>
            <% }) %>
        </div>
