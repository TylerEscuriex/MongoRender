<!-- Views/home.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Message Board</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Include the navigation bar -->
    <%- include('navbar', { authToken: authToken }) %>

    <div class="container">
        <div class="jumbotron my-5 p-5 bg-light rounded">
            <h1 class="display-4">Welcome to the Message Board!</h1>
            <p class="lead">
                This is a simple message board system where you can create topics, subscribe to topics,
                and exchange messages with other users.
            </p>
            <hr class="my-4">
            <p>Get started by browsing existing topics or creating your own.</p>
            <a class="btn btn-primary btn-lg" href="/topics" role="button">View Topics</a>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>